{
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": false
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "brace-style": 1,
    "comma-dangle": [
      "error", 
      "always-multiline"
    ],
    "comma-spacing": 1,
    "indent": [
      "error",
      2
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "keyword-spacing": 1,
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-console": 0,
    "no-trailing-spaces": 1,
    "no-undef": 0,
    "quotes": [
      "error",
      "single"
    ],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 1,
    "semi": [
      "error",
      "always"
    ],
    "space-infix-ops": 1,
    "space-before-blocks": 1
  }
}
